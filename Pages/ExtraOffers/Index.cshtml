@page
@model WebRoutes.Pages.ExtraOffers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Extra Offer</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExtraOffer[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraOffer[0].description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraOffer[0].price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraOffer[0].ExtraOfferCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExtraOfferD.ExtraOffers)
        {
            string selectedRow = "";
            if (item.ID == Model.extraofferID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @{
                    foreach (var category in item.ExtraOfferCategories)
                    {
                         @: @category.ExtraCategory.extra_category_name<br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
